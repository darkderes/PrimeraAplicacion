<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    tools:context="cl.inacap.unidad1.activity.ClienteActivity" >
    
        <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#FFFFFF"
        android:shadowColor="#ADFF2F"
        android:shadowRadius="1.5"
        android:textSize = "25sp"
        android:text="Edicion de Clientes"
        android:shadowDx="1"
        android:shadowDy="3"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_nombre"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/edit_nombre"
        android:layout_marginBottom="32dp"
        android:text="Nombre" />

    <TextView
        android:id="@+id/txt_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_telefono"
        android:text="Telefono"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Txt_latitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_direccion"
        android:layout_alignLeft="@+id/edit_nombre"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_marginBottom="13dp"
        android:text="Direccion" />

    <EditText
        android:id="@+id/edit_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Txt_latitud"
        android:layout_alignLeft="@+id/btn_delete_cliente"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="18dp"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_update_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="30dp"
        android:background="@android:color/white"
        android:text="Modificar" />

    <Button
        android:id="@+id/btn_delete_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_update_cliente"
        android:layout_alignBottom="@+id/btn_update_cliente"
        android:layout_alignLeft="@+id/btn_update_cliente"
        android:layout_alignParentRight="true"
        android:background="@android:color/white"
        android:text="Eliminar" />

    <EditText
        android:id="@+id/edit_telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_update_cliente"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="98dp"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/edit_direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_pedido"
        android:layout_alignLeft="@+id/txt_pedido"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="18dp"
        android:background="@android:color/white"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20sp" />

</RelativeLayout>