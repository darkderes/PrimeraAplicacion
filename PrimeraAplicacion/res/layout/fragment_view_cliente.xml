<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.inacap.unidad1.activity.ClienteActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edit_nombre"
        android:layout_alignLeft="@+id/edit_nombre"
        android:layout_marginBottom="32dp"
        android:text="Nombre"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Txt_latitud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_direccion"
        android:layout_alignLeft="@+id/edit_nombre"
        android:layout_marginBottom="13dp"
        android:text="Direccion" 
        android:textSize="20sp"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/edit_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Txt_latitud"
        android:layout_alignLeft="@+id/btn_delete_cliente"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="18dp"   
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#6F172C"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_pedido"
        android:layout_alignLeft="@+id/txt_pedido"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#6F172C"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edit_telefono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_update_cliente"
        android:layout_alignLeft="@+id/btn_update_cliente"
        android:layout_alignRight="@+id/btn_update_cliente"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColor="#6F172C"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_pedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/edit_telefono"
        android:layout_alignLeft="@+id/edit_telefono"
        android:layout_marginBottom="12dp"
        android:text="Telefono"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:shadowDx="1"
        android:shadowDy="3"
        android:text="Edicion de Clientes"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#6F172C"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_delete_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_telefono"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#1ED142"
        android:text="Eliminar"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_update_cliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_delete_cliente"
        android:layout_alignBottom="@+id/btn_delete_cliente"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/imageView1"
        android:background="#1ED142"
        android:text="Modificar"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_below="@+id/textView3"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/logo" />

</RelativeLayout>