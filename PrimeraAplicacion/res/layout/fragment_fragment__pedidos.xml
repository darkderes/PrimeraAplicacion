<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cl.inacap.unidad1.activity.PedidoActivity" >

    <EditText
        android:id="@+id/txt_precio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_add_pedido"
        android:layout_alignLeft="@+id/TextView02"
        android:layout_marginBottom="24dp"
        android:ems="10"
        android:inputType="phone"
        android:textColor="#6F172C"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_precio"
        android:layout_alignLeft="@+id/txt_cantidad"
        android:text="Precio"
        android:textSize="20sp" 
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/txt_cantidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView02"
        android:layout_alignLeft="@+id/TextView01"
        android:ems="10"
        android:inputType="phone"
        android:textColor="#6F172C"
        android:textSize="20sp"
        android:textStyle="bold"  />

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_cantidad"
        android:layout_alignLeft="@+id/sp_producto"
        android:text="Cantidad"
        android:textSize="20sp" 
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/Txt_latitud"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sp_cliente"
        android:layout_alignLeft="@+id/sp_cliente"
        android:text="Cliente"
        android:textSize="20sp"
        android:textStyle="bold"  />

    <TextView
        android:id="@+id/txt_pedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Txt_latitud"
        android:layout_alignLeft="@+id/Txt_latitud"
        android:layout_marginBottom="13dp"
        android:text="TextView"
         android:textColor="#6F172C"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btn_add_pedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_precio"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dp"
        android:background="#1ED142"
        android:text="Agregar Pedido"
        android:textColor="#ffffff"
        android:textStyle="bold" />
    

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_pedido"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:src="@drawable/logo" />

    <Spinner
        android:id="@+id/sp_cliente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/Txt_msj"
        android:layout_alignLeft="@+id/Txt_msj"
        android:background="@android:color/white"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/sp_producto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/TextView01"
        android:layout_alignLeft="@+id/imageView1"
        android:background="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Txt_msj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sp_producto"
        android:layout_alignLeft="@+id/sp_producto"
        android:text="Productos"
        android:textSize="20sp"
        android:textStyle="bold" />
    
      

</RelativeLayout>